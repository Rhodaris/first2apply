{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "lib": ["dom"],
    "types": ["https://deno.land/x/deno@v1.0.0/types.d.ts"]
  },
  "include": ["src/**/*"]
}